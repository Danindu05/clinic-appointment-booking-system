---
import Navbar from '../components/navbar.astro';
import Footer from '../components/footer.astro';
import '../styles/index.css';
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CABS â€” Home</title>
    <link rel="icon" href="/favicon.svg" />
    <!-- Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <!-- Main stylesheet -->
    <link rel="stylesheet" href="/styles/index.css" />
  </head>
  <body>
    <Navbar />

    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-text">
        <h1>
          Book Appointment<br />
          With Trusted Doctors
        </h1>
        <p>
          Simply browse through our extensive list of trusted doctors and
          schedule your appointment hassle-free.
        </p>
        <a href="/register" class="btn btn-primary">
          Create Account <i class="fas fa-arrow-right"></i>
        </a>
      </div>
      <div class="hero-image">
        <img src="/img/hero.png" alt="Group of doctors" />
      </div>
    </section>

    <!-- Specialties Section -->
    <section class="specialties">
      <h2>Find by Specialty</h2>
      <div class="specialty-list">
        <div class="specialty-card">
          <i class="fas fa-user-md"></i>
          <span>General Physician</span>
        </div>
        <div class="specialty-card">
          <i class="fas fa-baby"></i>
          <span>Pediatrician</span>
        </div>
        <div class="specialty-card">
          <i class="fas fa-brain"></i>
          <span>Neurologist</span>
        </div>
        <div class="specialty-card">
          <i class="fas fa-spray-can"></i>
          <span>Dermatologist</span>
        </div>
        <div class="specialty-card">
          <i class="fas fa-venus"></i>
          <span>Gynecologist</span>
        </div>
        <div class="specialty-card">
          <i class="fas fa-heartbeat"></i>
          <span>Cardiologist</span>
        </div>
      </div>
    </section>

    <!-- Top Doctors Section -->
    <section class="top-doctors">
      <h2>Top Doctors to Book</h2>
      <div class="doctor-grid">
        <div class="doctor-card">
          <img src="/img/doc1.png" alt="Dr. Richard James" />
          <div class="doctor-info">
            <i class="fas fa-check-circle status-icon"></i>
            <div>
              <h3>Dr. Richard James</h3>
              <p>General Physician</p>
            </div>
          </div>
        </div>
        <div class="doctor-card">
          <img src="/img/doc2.webp" alt="Dr. Mitchell David" />
          <div class="doctor-info">
            <i class="fas fa-check-circle status-icon"></i>
            <div>
              <h3>Dr. Mitchell David</h3>
              <p>Dermatologist</p>
            </div>
          </div>
        </div>


        <div class="doctor-card">
          <img src="/img/doc1.png" alt="Dr. Richard James" />
          <div class="doctor-info">
            <i class="fas fa-check-circle status-icon"></i>
            <div>
              <h3>Dr. Richard James</h3>
              <p>General Physician</p>
            </div>
          </div>
        </div>
        <div class="doctor-card">
          <img src="/img/doc2.webp" alt="Dr. Mitchell David" />
          <div class="doctor-info">
            <i class="fas fa-check-circle status-icon"></i>
            <div>
              <h3>Dr. Mitchell David</h3>
              <p>Dermatologist</p>
            </div>
          </div>
        </div>




        <!-- Duplicate or loop more .doctor-card blocks as needed -->
      </div>
      <a href="/doctors" class="btn btn-secondary">
        View All <i class="fas fa-arrow-right"></i>
      </a>
    </section>

    <Footer />
  </body>
</html>